<Page x:Class="_41_razmerRasstegaev.BotinokPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_41_razmerRasstegaev"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BotinokPage" FontFamily="Comic Sans MS" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBox Name="TBSearch" Width="300" Margin="5" SelectionChanged="TBSearch_SelectionChanged"></TextBox>
            <ComboBox Name="SortCombo" Margin="5" SelectionChanged="SortCombo_SelectionChanged" FontSize="15" Width="250">
                <TextBlock Text="Стоимость по возрастанию"></TextBlock>
                <TextBlock Text="Стоимость по убыванию"></TextBlock>
            </ComboBox>
            <ComboBox Name="TypeCombo" SelectionChanged="TypeCombo_SelectionChanged" FontSize="15" Width="200" Margin="5">
                <TextBlock Text="Все диапазоны"></TextBlock>
                <TextBlock Text="0 - 9,99%"></TextBlock>
                <TextBlock Text="10-14,99%"></TextBlock>
                <TextBlock Text="15%"></TextBlock>
                <TextBlock Text="более 15%"></TextBlock>
            </ComboBox>
        </StackPanel>
        <ListView Name="BotinokListView" Grid.Row="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Image Width="150" Grid.Column="0" Stretch="UniformToFill" HorizontalAlignment="Center" Grid.RowSpan="4">
                            <Image.Source>
                                <Binding Path="ProductPhoto">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            res\picture.png
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding ProductName, StringFormat={} | }" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"></TextBlock>
                        <TextBlock Text="{Binding ProductEdIzm}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right"  FontSize="20"></TextBlock>
                        <TextBlock Text="{Binding ProductManufacturer}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" FontSize="16"></TextBlock>
                        <TextBlock Text="{Binding ProductCost, StringFormat=Цена: {0}}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" FontSize="16"></TextBlock>
                        <TextBlock Text="{Binding ProductDiscountAmount, StringFormat=Скидка: {0}%}" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" FontSize="20"></TextBlock>
                        <Button Name="Edit_Button" Content="Редактировать" Click="Edit_Button_Click" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Height="30" Width="200" FontSize="15"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
